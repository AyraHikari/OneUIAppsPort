<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="?android:colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="@dimen/left_panel_highlight_padding" android:right="@dimen/left_panel_highlight_padding">
        <selector>
            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/left_panel_highlight_color" />
                    <corners android:radius="@dimen/left_panel_highlight_radius" />
                </shape>
            </item>
        </selector>
    </item>
    <item android:id="@android:id/mask" android:left="@dimen/left_panel_highlight_padding" android:right="@dimen/left_panel_highlight_padding">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
            <corners android:radius="@dimen/left_panel_highlight_radius" />
        </shape>
    </item>
</ripple>