<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/widget_main_layout" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/widget_background" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitXY" />
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginHorizontal="@dimen/widget_2x1_side_margin_land">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginEnd="@dimen/widget_2x1_temperature_area_marginEnd_land">
            <ImageView android:id="@id/widget_current_weather_icon" android:visibility="gone" android:layout_width="@dimen/widget_2x1_weather_icon_size_land" android:layout_height="@dimen/widget_2x1_weather_icon_size_land" />
            <FrameLayout android:id="@id/widget_current_weather_icon_animation" android:layout_width="@dimen/widget_2x1_weather_icon_size_land" android:layout_height="@dimen/widget_2x1_weather_icon_size_land" />
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/widget_2x1_temperature_area_marginStart_land">
                <TextView android:textAppearance="@style/WeatherWidget.TextAppearance.Temperature.BlackShadow" android:textSize="@dimen/widget_2x1_temperature_text_size_land" android:id="@id/widget_current_temp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textAppearance="@style/WeatherWidget.TextAppearance.Temperature" android:textSize="@dimen/widget_2x1_temperature_text_size_land" android:id="@id/widget_current_temp_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
        <RelativeLayout android:gravity="center_vertical" android:id="@id/location_city_updated_area" android:layout_width="wrap_content" android:layout_height="fill_parent">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/location_icon_city_name_area" android:paddingTop="@dimen/widget_2x1_refresh_touch_top_bottom_padding_land" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textAppearance="@style/WeatherWidget.TextAppearance.CityName.BlackShadow" android:textSize="@dimen/widget_2x1_city_name_text_size_land" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@id/widget_current_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" />
                <TextView android:textAppearance="@style/WeatherWidget.TextAppearance.CityName" android:textSize="@dimen/widget_2x1_city_name_text_size_land" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@id/widget_current_city_name_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" />
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/index_updated_refresh_area" android:paddingBottom="@dimen/widget_2x1_refresh_touch_top_bottom_padding_land" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/widget_2x1_update_text_area_marginTop_land" android:layout_below="@id/location_icon_city_name_area">
                <TextView android:textSize="@dimen/widget_2x1_updated_text_size_land" android:ellipsize="end" android:gravity="start" android:layout_gravity="center_vertical" android:id="@id/widget_update_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" style="@style/WeatherWidget.TextAppearance.LastUpdate.BlackShadow" />
                <TextView android:textSize="@dimen/widget_2x1_updated_text_size_land" android:ellipsize="end" android:gravity="start" android:layout_gravity="center_vertical" android:id="@id/widget_update_text_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" style="@style/WeatherWidget.TextAppearance.LastUpdate" />
                <FrameLayout android:id="@id/refresh_progress_area" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/widget_2x1_refresh_progress_margin_start_land">
                    <ProgressBar android:theme="@style/WeatherWidget.Progress.Theme.White" android:id="@id/widget_refresh_progress" android:visibility="gone" android:layout_width="@dimen/widget_2x1_refresh_progress_size_land" android:layout_height="@dimen/widget_2x1_refresh_progress_size_land" style="@style/WeatherWidget.Progress" />
                    <ProgressBar android:theme="@style/WeatherWidget.Progress.Theme.Black" android:id="@id/widget_refresh_progress_wallpaper" android:visibility="gone" android:layout_width="@dimen/widget_2x1_refresh_progress_size_land" android:layout_height="@dimen/widget_2x1_refresh_progress_size_land" style="@style/WeatherWidget.Progress" />
                    <ImageView android:id="@id/widget_refresh_icon" android:visibility="gone" android:layout_width="@dimen/widget_2x1_refresh_progress_size_land" android:layout_height="@dimen/widget_2x1_refresh_progress_size_land" android:scaleType="fitXY" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@id/widget_refresh_icon_touch_area_anchor" android:layout_width="@dimen/widget_2x1_refresh_progress_size_land" android:layout_height="@dimen/widget_2x1_refresh_progress_size_land" android:layout_alignBottom="@id/index_updated_refresh_area" android:layout_toEndOf="@id/index_updated_refresh_area" />
            <Button android:id="@id/widget_refresh_icon_touch_area" android:background="@android:color/transparent" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="@dimen/widget_2x1_refresh_touch_view_size_land" android:layout_height="@dimen/widget_2x1_refresh_touch_view_size_land" android:layout_alignBottom="@id/widget_refresh_icon_touch_area_anchor" android:contentDescription="@string/refresh_button" android:layout_alignEnd="@id/widget_refresh_icon_touch_area_anchor" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>